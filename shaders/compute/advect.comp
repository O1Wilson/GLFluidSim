#version 460 core
layout(local_size_x = 16, local_size_y = 16) in;
layout(r32f, binding = 0) uniform image2D dst;

void main() {
	ivec2 coords = ivec2(gl_GlobalInvocationID.xy);
	int N = imageSize(dst).x;

	if (coords.x >= N || coords.y >= N) return;

	float value = float(coords.x) / float(N);
	imageStore(dst, coords, vec4(value, 0.0, 0.0, 1.0));
}